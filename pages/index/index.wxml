
<view class="login">
  <view class="text">登录</view>
  <van-cell-group>
    <van-field
      value="{{ username }}"
      required
      clearable
      label="用户名"
      icon="question-o"
      placeholder="请输入用户名"
      bind:click-icon="onClickIcon"
    />

    <van-field
      value="{{ password }}"
      type="password"
      label="密码"
      placeholder="请输入密码"
      required
      border="{{ false }}"
    />
  </van-cell-group>
<view class="btn">
  <van-button bindtap="login" type="primary" size="large">登录</van-button>
</view>
</view>
